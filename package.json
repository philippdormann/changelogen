{
  "name": "@philippdormann/changelogen",
  "version": "0.7.5",
  "description": "Generate Beautiful Changelogs using Conventional Commits",
  "repository": "philippdormann/changelogen",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "changelogen": "./dist/cli.mjs"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "changelogen": "jiti ./src/cli.ts",
    "dev": "vitest dev",
    "lint": "eslint --ext .ts,.js,.mjs,.cjs . && prettier -c src test",
    "lint:fix": "eslint --fix --ext .ts,.js,.mjs,.cjs . && prettier -w src test",
    "prepack": "unbuild",
    "release": "pnpm test && pnpm changelogen --release --push && pnpm publish",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "c12": "^1.4.1",
    "colorette": "^2.0.20",
    "consola": "^2.15.3",
    "convert-gitmoji": "^0.1.3",
    "execa": "^7.1.1",
    "mri": "^1.2.0",
    "node-fetch-native": "^1.1.0",
    "ofetch": "^1.0.1",
    "pathe": "^1.1.0",
    "pkg-types": "^1.0.3",
    "scule": "^1.0.0",
    "semver": "^7.5.0",
    "yaml": "^2.2.2"
  },
  "devDependencies": {
    "@types/node": "^18.16.3",
    "@types/semver": "^7.3.13",
    "@vitest/coverage-c8": "^0.29.8",
    "eslint": "^8.39.0",
    "eslint-config-unjs": "^0.1.0",
    "jiti": "^1.18.2",
    "prettier": "^2.8.8",
    "standard-version": "^9.5.0",
    "typescript": "^4.9.5",
    "unbuild": "^1.2.1",
    "vitest": "^0.29.8"
  },
  "packageManager": "pnpm@7.32.2"
}